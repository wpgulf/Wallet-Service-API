{
  "info": {
    "name": "Wallet Service API",
    "description": "Postman collection for Wallet Service (Laravel)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Create Wallet",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"owner_name\": \"Ali\",\n  \"currency\": \"SAR\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/wallets",
          "host": ["{{base_url}}"],
          "path": ["api", "wallets"]
        }
      }
    },
    {
      "name": "Get Wallet By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/wallets/1",
          "host": ["{{base_url}}"],
          "path": ["api", "wallets", "1"]
        }
      }
    },
    {
      "name": "List Wallets",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/wallets",
          "host": ["{{base_url}}"],
          "path": ["api", "wallets"]
        }
      }
    },
    {
      "name": "Deposit",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Idempotency-Key", "value": "deposit-001" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 100\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/wallets/1/deposit",
          "host": ["{{base_url}}"],
          "path": ["api", "wallets", "1", "deposit"]
        }
      }
    },
    {
      "name": "Withdraw",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Idempotency-Key", "value": "withdraw-001" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 30\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/wallets/1/withdraw",
          "host": ["{{base_url}}"],
          "path": ["api", "wallets", "1", "withdraw"]
        }
      }
    },
    {
      "name": "Transfer",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Idempotency-Key", "value": "transfer-001" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"from_wallet_id\": 1,\n  \"to_wallet_id\": 2,\n  \"amount\": 50\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/transfers",
          "host": ["{{base_url}}"],
          "path": ["api", "transfers"]
        }
      }
    },
    {
      "name": "Wallet Balance",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/wallets/1/balance",
          "host": ["{{base_url}}"],
          "path": ["api", "wallets", "1", "balance"]
        }
      }
    },
    {
      "name": "Transaction History",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/wallets/1/transactions?per_page=10",
          "host": ["{{base_url}}"],
          "path": ["api", "wallets", "1", "transactions"],
          "query": [
            { "key": "per_page", "value": "10" }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    }
  ]
}
